<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>Latest</LangVersion>
        <Nullable>enable</Nullable>
        <WarningsAsErrors>CS8600;CS8602;CS8603;CS8604;CS8605</WarningsAsErrors>
        <GenerateFullPaths>true</GenerateFullPaths>
    </PropertyGroup>

    <PropertyGroup>
        <BcDevToolsVersion>16.2.28.57946</BcDevToolsVersion>
        <BcDevToolsPackageRoot>$(NuGetPackageRoot)microsoft.dynamics.businesscentral.development.tools/$(BcDevToolsVersion)</BcDevToolsPackageRoot>
    </PropertyGroup>

    <ItemGroup>
        <PackageDownload Include="Microsoft.Dynamics.BusinessCentral.Development.Tools"
                        Version="[$(BcDevToolsVersion)]" />
    </ItemGroup>

    <ItemGroup>
        <Reference Include="Microsoft.Dynamics.Nav.CodeAnalysis">
            <HintPath>$(BcDevToolsPackageRoot)/tools/net8.0/any/Microsoft.Dynamics.Nav.CodeAnalysis.dll</HintPath>
            <Private>false</Private>
        </Reference>
    </ItemGroup>
</Project>